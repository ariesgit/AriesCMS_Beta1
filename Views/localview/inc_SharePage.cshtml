@model AriesCMS.Helpers.SiteCoreHelper




<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 toppadding">
            <p>&nbsp;</p>
        </div>
    </div>
    <div class="row rwHeight">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-lg-center text-md-center text-smg-center text-xs-center">
            <center><h3 class="" style="font-size:1.3em;">Share Content</h3> </center>
        </div>
        <div class="row">
            @if (ViewBag.bError == true)
            {
                <div class="col-lg-8 col-md-8 offset-lg-2 offset-md-2 col-sm-12 col-xs-12 alert-danger">
                    <p>@Html.Raw(ViewBag.ErrorMessage)</p>
                </div>
            }
            else if (ViewBag.bCompleted == true)
            {
                <div class="col-lg-8 col-md-8 offset-lg-2 offset-md-2 col-sm-12 col-xs-12 alert-success">
                    <h4>Thank you!  You Have Shared This Content.</h4>
                </div>
            }
        </div>
        @if (ViewBag.bCompleted == false)
        {
            <div class="row">
                <div class="col-lg-8 col-md-8 offset-lg-2 offset-md-2 col-sm-12 col-xs-12">
                  

                    @using (Html.BeginForm("SubmitShareLink", "fr", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true);

                        @Html.HiddenFor(model => model.ShareContentFormData.ErrorPageURL)
                        @Html.HiddenFor(model => model.ShareContentFormData.SuccessPageURL)
                        @Html.HiddenFor(model => model.ShareContentFormData.SourceForm)
                        @Html.HiddenFor(model => model.ShareContentFormData.IsCMSForm)


                        <fieldset>
                            <legend></legend>
                            <div class="form-group">
                                <label for="ShareContentFormData_Name">Share Link :</label>
                                @Html.DisplayFor(model => model.ShareContentFormData.URL);
                            </div>

                            <div class="form-group">
                                <label for="ShareContentFormData_Name">Subject :</label>
                                @Html.TextBoxFor(model => model.ShareContentFormData.sSubject, new { @Class = "form-control", @placeholder = "Subject" })
                                <span class="alert-danger">@Html.ValidationMessageFor(model => model.ShareContentFormData.sSubject)</span>
                            </div>

                            <div class="form-group">
                                <label for="ShareContentFormData_Email">E-Mail(s) (separate each email with an ",") :</label>
                                @Html.TextBoxFor(model => model.ShareContentFormData.sToEmails, new { @Class = "form-control", @placeholder = "Email address" })
                                <span class="alert-danger">@Html.ValidationMessageFor(model => model.ShareContentFormData.sToEmails)</span>
                            </div>

                            <div class="form-group">
                                <label for="ShareContentFormData_Phone">Cell Phone(s)  (separate each email with an ","):</label>
                                @Html.TextBoxFor(model => model.ShareContentFormData.sToCellPhones, new { @Class = "form-control", @placeholder = "Cell phones" })
                                <span class="alert-danger">@Html.ValidationMessageFor(model => model.ShareContentFormData.sToCellPhones)</span>
                            </div>

                            <div class="form-group">
                                <label for="ShareContentFormData_Message">Message :</label>
                                @Html.TextAreaFor(model => model.ShareContentFormData.sMessage, new { @Class = "form-control textareal", @placeholder = "You’re Message" })
                            </div>

                        </fieldset>
                        <div class="form-group">
                            <input type="submit" name="submit" value="SHARE" class="btn btn-primary" />
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
