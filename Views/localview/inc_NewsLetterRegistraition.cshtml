@model AriesCMS.Helpers.SiteCoreHelper



<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 toppadding">
            <p>&nbsp;</p>
        </div>
    </div>
    <div class="row rwHeight">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-lg-center text-md-center text-smg-center text-xs-center">
            <center><h3 class="">Great, we love to share with you.</h3> </center>
        </div>
        <div class="row">
            @if (ViewBag.bError == true)
            {
                <div class="col-lg-8 col-md-8 offset-lg-2 offset-md-2 col-sm-12 col-xs-12 alert-danger">
                    <p>@Html.Raw(ViewBag.ErrorMessage)</p>
                </div>
            }
            else if (ViewBag.bCompleted == true)
            {
                <div class="col-lg-8 col-md-8 offset-lg-2 offset-md-2 col-sm-12 col-xs-12 alert-success">
                    <h4>Thank you! Your, in.  Please add our domain to your safe sender list so that you don't miss a thing.</h4>
                </div>
            }
        </div>
        @if (ViewBag.bCompleted == false)
        {
            <div class="row">
                <div class="col-lg-8 col-md-8 offset-lg-2 offset-md-2 col-sm-12 col-xs-12">
                    <h1 class="text-center text-bold">Register For Our News Letter</h1>


                    @using (Html.BeginForm("SubmitNewsLetterSignUp", "fr", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true);

                        @Html.HiddenFor(model => model.NewNewsLetterFormData.ErrorPageURL)
                        @Html.HiddenFor(model => model.NewNewsLetterFormData.SuccessPageURL)
                        @Html.HiddenFor(model => model.NewNewsLetterFormData.SourceForm)
                        @Html.HiddenFor(model => model.NewNewsLetterFormData.IsCMSForm)


                        <fieldset>
                            <legend></legend>

                            <div class="form-group">
                                <label for="NewNewsLetterFormData_FirstName">First name :</label>
                                @Html.TextBoxFor(model => model.NewNewsLetterFormData.FirstName, new { @Class = "form-control", @placeholder = "First name is required" })
                                <span class="alert-danger">@Html.ValidationMessageFor(model => model.NewNewsLetterFormData.FirstName)</span>
                            </div>

                            <div class="form-group">
                                <label for="NewNewsLetterFormData_LastName">Last name :</label>
                                @Html.TextBoxFor(model => model.NewNewsLetterFormData.LastName, new { @Class = "form-control", @placeholder = "Last name is required" })
                                <span class="alert-danger">@Html.ValidationMessageFor(model => model.NewNewsLetterFormData.LastName)</span>
                            </div>


                            <div class="form-group">
                                <label for="NewNewsLetterFormData_Email">E-Mail :</label>
                                @Html.TextBoxFor(model => model.NewNewsLetterFormData.EMail, new { @Class = "form-control", @placeholder = "A Valid Email is Required" })
                                <span class="alert-danger">@Html.ValidationMessageFor(model => model.NewNewsLetterFormData.EMail)</span>
                            </div>

                        </fieldset>
                        <div class="form-group">
                            <input type="submit" name="submit" value="JOIN US" class="btn btn-primary" />
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
