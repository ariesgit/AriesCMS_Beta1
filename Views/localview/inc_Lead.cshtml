@model AriesCMS.Helpers.SiteCoreHelper




<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 toppadding">
            <p>&nbsp;</p>
        </div>
    </div>
    <div class="row rwHeight">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
            <center><h3 class="" style="font-size:1.3em;">Open Source<strong>.NET C# Content Management Platform</strong> For Programmers, by Programmers</h3> </center>
        </div>
        <div class="row">
            @if (ViewBag.bError == true)
            {
                <div class="col-lg-8 col-md-8 offset-lg-2 offset-md-2 col-sm-12 col-xs-12 alert-danger">
                    <p>@Html.Raw(ViewBag.ErrorMessage)</p>
                </div>
            }
            else if (ViewBag.bCompleted == true)
            {
                <div class="col-lg-8 col-md-8 offset-lg-2 offset-md-2 col-sm-12 col-xs-12 alert-success">
                    <h4>Thank you!  We will attend to your request as quickly as possible.</h4>
                </div>
            }
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h1 class="text-center text-bold">New Lead</h1>

            @if (ViewBag.bCompleted == false)
            {
                <div class="row">
                    <div class="col-lg-8 col-md-8 offset-lg-2 offset-md-2 col-sm-12 col-xs-12">

                        @using (Html.BeginForm("SubmitSendLeadRequest", "fr", FormMethod.Post))
                        {
                            @Html.ValidationSummary(true);

                            @Html.HiddenFor(model => model.ContactLeadFormData.ErrorPageURL)
                            @Html.HiddenFor(model => model.ContactLeadFormData.SuccessPageURL)
                            @Html.HiddenFor(model => model.ContactLeadFormData.SourceForm)
                            @Html.HiddenFor(model => model.ContactLeadFormData.IsCMSForm)


                            <fieldset>
                                <legend></legend>

                                <div class="form-group">
                                    <label for="ContactLeadFormData_Name">First name :</label>
                                    @Html.TextBoxFor(model => model.ContactLeadFormData.FirstName, new { @Class = "form-control", @placeholder = "" })
                                    <span class="alert-danger">@Html.ValidationMessageFor(model => model.ContactLeadFormData.FirstName)</span>
                                </div>
                                <div class="form-group">
                                    <label for="ContactLeadFormData_LastName">Last name :</label>
                                    @Html.TextBoxFor(model => model.ContactLeadFormData.LastName, new { @Class = "form-control", @placeholder = "" })
                                    <span class="alert-danger">@Html.ValidationMessageFor(model => model.ContactLeadFormData.LastName)</span>
                                </div>
                                <div class="form-group">
                                    <label for="ContactLeadFormData_CompanyName">Company name :</label>
                                    @Html.TextBoxFor(model => model.ContactLeadFormData.CompanyName, new { @Class = "form-control", @placeholder = "" })
                                    <span class="alert-danger">@Html.ValidationMessageFor(model => model.ContactLeadFormData.CompanyName)</span>
                                </div>
                                <div class="form-group">
                                    <label for="ContactLeadFormData_Title">Title :</label>
                                    @Html.TextBoxFor(model => model.ContactLeadFormData.Title, new { @Class = "form-control", @placeholder = "" })
                                    <span class="alert-danger">@Html.ValidationMessageFor(model => model.ContactLeadFormData.Title)</span>
                                </div>
                                <div class="form-group">
                                    <label for="ContactLeadFormData_CompanyURL">Company URL :</label>
                                    @Html.TextBoxFor(model => model.ContactLeadFormData.CompanyURL, new { @Class = "form-control", @placeholder = "" })
                                    <span class="alert-danger">@Html.ValidationMessageFor(model => model.ContactLeadFormData.CompanyURL)</span>
                                </div>
                                <div class="form-group">
                                    <label for="ContactLeadFormData_Phone">Phone :</label>
                                    @Html.TextBoxFor(model => model.ContactLeadFormData.Phone, new { @Class = "form-control", @placeholder = "" })
                                    <span class="alert-danger">@Html.ValidationMessageFor(model => model.ContactLeadFormData.Phone)</span>
                                </div>
                                <div class="form-group">
                                    <label for="ContactLeadFormData_PhoneExt">Phone Ext. :</label>
                                    @Html.TextBoxFor(model => model.ContactLeadFormData.PhoneExt, new { @Class = "form-control", @placeholder = "" })
                                    <span class="alert-danger">@Html.ValidationMessageFor(model => model.ContactLeadFormData.PhoneExt)</span>
                                </div>
                                <div class="form-group">
                                    <label for="ContactLeadFormData_Email">E-mail :</label>
                                    @Html.TextBoxFor(model => model.ContactLeadFormData.Email, new { @Class = "form-control", @placeholder = "" })
                                    <span class="alert-danger">@Html.ValidationMessageFor(model => model.ContactLeadFormData.Email)</span>
                                </div>
                                <div class="form-group">
                                    <label for="ContactLeadFormData_GrossAnnualRevenues">Gross annual revenues :</label>
                                    @Html.TextBoxFor(model => model.ContactLeadFormData.GrossAnnualRevenues, new { @Class = "form-control", @placeholder = "" })
                                    <span class="alert-danger">@Html.ValidationMessageFor(model => model.ContactLeadFormData.GrossAnnualRevenues)</span>
                                </div>
                                <div class="form-group">
                                    <label for="ContactLeadFormData_HowManyEmployees">How Many Employees :</label>
                                    @Html.TextBoxFor(model => model.ContactLeadFormData.HowManyEmployees, new { @Class = "form-control", @placeholder = "" })
                                    <span class="alert-danger">@Html.ValidationMessageFor(model => model.ContactLeadFormData.HowManyEmployees)</span>
                                </div>
                                <div class="form-group">
                                    <label for="ContactLeadFormData_RefferalCode">Refferal Code :</label>
                                    @Html.TextBoxFor(model => model.ContactLeadFormData.RefferalCode, new { @Class = "form-control", @placeholder = "" })
                                    <span class="alert-danger">@Html.ValidationMessageFor(model => model.ContactLeadFormData.RefferalCode)</span>
                                </div>

                                <div class="form-group">
                                    <label for="ContactLeadFormData_Notes">Notes :</label>
                                    @Html.TextAreaFor(model => model.ContactLeadFormData.Notes, new { @Class = "form-control textarea", @placeholder = "" })
                                </div>

                            </fieldset>
                                <div class="form-group">
                                    <input type="submit" name="submit" value="SEND MESSAGE" class="btn btn-primary" />
                                </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

