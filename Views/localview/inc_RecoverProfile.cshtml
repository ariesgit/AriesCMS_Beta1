@model AriesCMS.Helpers.SiteCoreHelper



<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 toppadding">
            <p>&nbsp;</p>
        </div>
    </div>
    <div class="row rwHeight">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-lg-center text-md-center text-smg-center text-xs-center">
            <center><h3 class="">So you lost your credentidals? No problem, just use the form below to recover it.</h3> </center>
        </div>
        <div class="row">
            @if (ViewBag.bError == true)
            {
                <div class="col-lg-8 col-md-8 offset-lg-2 offset-md-2 col-sm-12 col-xs-12 alert-danger">
                    <p>@Html.Raw(ViewBag.ErrorMessage)</p>
                </div>
            }
            else if (ViewBag.bCompleted == true)
            {
                <div class="col-lg-8 col-md-8 offset-lg-2 offset-md-2 col-sm-12 col-xs-12 alert-success">
                    <h4>Thank you! The information and instructions to reset your account has been emailed to your email on record.  If you need further help please contact our support.</h4>
                </div>
            }
        </div>
        @if (ViewBag.bCompleted == false)
        {
            <div class="row">
                <div class="col-lg-8 col-md-8 offset-lg-2 offset-md-2 col-sm-12 col-xs-12">
                    <h1 class="text-center text-bold">Recover Lost Credentials</h1>
                    

                    @using (Html.BeginForm("SubmitRecoverProfile", "fr", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true);

                        @Html.HiddenFor(model => model.ProfileRecoveryFormData.ErrorPageURL)
                        @Html.HiddenFor(model => model.ProfileRecoveryFormData.SuccessPageURL)
                        @Html.HiddenFor(model => model.ProfileRecoveryFormData.SourceForm)
                        @Html.HiddenFor(model => model.ProfileRecoveryFormData.IsCMSForm)


                        <fieldset>
                            <legend></legend>


                            <div class="form-group">
                                <label for="ProfileRecoveryFormData_Email">E-Mail :</label>
                                @Html.TextBoxFor(model => model.ProfileRecoveryFormData.Email, new { @Class = "form-control", @placeholder = "A Valid Email is Required" })
                                <span class="alert-danger">@Html.ValidationMessageFor(model => model.ProfileRecoveryFormData.Email)</span>
                            </div>

                        </fieldset>
                        <div class="form-group">
                            <input type="submit" name="submit" value="RECOVER" class="btn btn-primary" />
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
