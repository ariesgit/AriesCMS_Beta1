@model ACMSDBView.WebSiteForumTopicPostsViewModel

<script type="text/javascript">


    function on_WebSiteForumTopicPosts_iQuestID_Changed() {
        try {
            var cboControl = document.getElementById("WebSiteForumTopicPosts_iQuestID");
            var selectedText = cboControl[cboControl.selectedIndex].text;

            var oHiddenField = document.getElementById("WebSiteForumTopicPosts_sQuestID");
            oHiddenField.value = selectedText;


        }
        catch (e) {
            alert(e);
        }
    }

</script>   
                    






<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 border_bottom_solid_1x">
            @if (ViewBag.bAddNew)
            {
                 <h2>You are ready to create a new Topic Post</h2>
            }
            else
            {
                 <h2>You are editing - 
                   @Model.WebSiteForumTopicPosts.sName
                 </h2>
            }   
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
       @if (ViewBag.bError == true)
       {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-danger">
                <p> @Html.Raw(ViewBag.sErrorMessage)</p>
            </div>
       }
       else if (ViewBag.bSaved == true)
       {               
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-success">
                <p>Your request was processed successfully.</p>
            </div>
       }
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <<  @Html.ActionLink("Return List View", "WebSiteForumTopicPosts_List", new { _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID })
 
       
        </div>
        
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 offset-lg-1 offset-md-1">
@using (Html.BeginForm("WebSiteForumTopicPosts_AddUpdate", "", FormMethod.Post))
                                   {                             
                                        @Html.ValidationSummary(true);
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.ID)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.sControl)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.sSync)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.iParentID)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.sParentID)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.dtDateCreated)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.dtLastUpdated)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.iCreatedByID)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.sCreatedByID)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.iUpdatedByID)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.sUpdatedByID)  

                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.sDescription) 

                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.sVersion) 
    
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.iAnsweredByID)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.sAnsweredByID)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.iAnsweredByResponseID)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.sAnsweredByResponseID)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.dTopicCount)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.bTrending)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.iUserID)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.sUserID)  
                         @Html.HiddenFor(model => model.WebSiteForumTopicPosts.sUserThumbNail)


    @Html.HiddenFor(model => model.WebSiteForumTopicPosts.sQuestID)
    @Html.HiddenFor(model => model.WebSiteForumTopicPosts.sQuestAnswerArray)
                                        <fieldset>  
                                            <legend></legend>


                                            <div class="form-group">
                                                <label for="WebSiteForumTopicPosts_sName">Title :</label>
                                                @Html.TextBoxFor(model => model.WebSiteForumTopicPosts.sName, new { @Class = "form-control", @readonly = "readonly" })
                                                <span class="alert-danger">@Html.ValidationMessageFor(model => model.WebSiteForumTopicPosts.sName)</span>
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSiteForumTopicPosts_bRemoved">Removed :</label>
                                                @Html.CheckBoxFor(model => model.WebSiteForumTopicPosts.bRemoved, new { @Class = "form-control checkbox-inline", @placeholder = "" })
                                                <span class="alert-danger">@Html.ValidationMessageFor(model => model.WebSiteForumTopicPosts.bRemoved)</span>
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSiteForumTopicPosts_bAnswered">Archive :</label>
                                                @Html.CheckBoxFor(model => model.WebSiteForumTopicPosts.bAnswered, new { @Class = "form-control checkbox-inline" })
                                                @if (ViewBag.bError == true)
                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSiteForumTopicPosts.bAnswered, "*Required!")
                                                }
                                            </div>


                                            <div class="form-group">
                                                <label for="WebSiteForumTopicPosts_sContent">Content :</label>
                                                @Html.TextAreaFor(model => model.WebSiteForumTopicPosts.sContent, new { @Class = "form-control textarea_admin", @placeholder = "" })
                                                <span class="alert-danger">@Html.ValidationMessageFor(model => model.WebSiteForumTopicPosts.sContent)</span>
                                            </div>





                                            <div class="form-group">
                                                <label for="WebSiteForumTopicPosts_iQuestID">Linked Questionair :</label>
                                                @Html.DropDownListFor(model => model.WebSiteForumTopicPosts.iQuestID, Model.WebSiteQuestionair, new { @Class = "form-control", @onchange = "javascript:on_WebSiteForumTopicPosts_iQuestID_Changed();" })
                                                @if (ViewBag.bError == true)
                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSiteForumTopicPosts.iQuestID, "*Required!")
                                                }
                                            </div>




                                        </fieldset>
                                        <div class="form-group">
                                           @if (ViewBag.bAddNew == true)
                                           {
                                                <input type="submit" value="Save" name="submit" class="btn btn-block btn-outline-primary" />
                                           }
                                           else
                                           {
                                                <input type="submit" value="Save" name="submit" class="btn btn-block btn-outline-primary" />
                                           }
                                        </div>
                                   } 
         </div>
    </div>
</div>





























