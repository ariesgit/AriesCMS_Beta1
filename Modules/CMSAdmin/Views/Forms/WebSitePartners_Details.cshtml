@model AriesCMS.Models.WebSitePartnersDBView


<script type="text/javascript">
    

    function on_Select_WebSitePartners_iTypeID_Changed() {
        try {
            var cboControl = document.getElementById("WebSitePartners_iTypeID");
            var selectedText = cboControl[cboControl.selectedIndex].text;

            var oHiddenField = document.getElementById("WebSitePartners_sTypeID");
            oHiddenField.value = selectedText;
            
        }
        catch (e) {
            alert(e);
        }
    }

    

    function on_Select_WebSitePartners_iAssociatedUserID_Changed() {
        try {
            var cboControl = document.getElementById("WebSitePartners_iAssociatedUserID");
            var selectedText = cboControl[cboControl.selectedIndex].text;

            var oHiddenField = document.getElementById("WebSitePartners_sAssociatedUserID");
            oHiddenField.value = selectedText;

        }
        catch (e) {
            alert(e);
        }
    }

</script>   
                    






<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 border_bottom_solid_1x">
            @if (ViewBag.bAddNew)
            {
                 <h2>You are ready to create a new Partner</h2>
            }
            else
            {
                 <h2>You are editing - 
                   @Model.WebSitePartners.sName
                 </h2>
            }   
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
       @if (ViewBag.bError == true)
       {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-danger">
                <p> @Html.Raw(ViewBag.sErrorMessage)</p>
            </div>
       }
       else if (ViewBag.bSaved == true)
       {               
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-success">
                <p>Your request was processed successfully.</p>
            </div>
       }
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                         <<  @Html.ActionLink("Return List View", "WebSitePartners_List" )
 
       
        </div>
        
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 offset-lg-1 offset-md-1">
@using (Html.BeginForm("WebSitePartners_AddUpdate", "", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
                                        @Html.ValidationSummary(true);
                         @Html.HiddenFor(model => model.WebSitePartners.ID)  
                         @Html.HiddenFor(model => model.WebSitePartners.sControl)  
                         @Html.HiddenFor(model => model.WebSitePartners.sSync)  
                         @Html.HiddenFor(model => model.WebSitePartners.iParentID)  
                         @Html.HiddenFor(model => model.WebSitePartners.sParentID)  
                         @Html.HiddenFor(model => model.WebSitePartners.dtDateCreated)  
                         @Html.HiddenFor(model => model.WebSitePartners.dtLastUpdated)  
                         @Html.HiddenFor(model => model.WebSitePartners.iCreatedByID)  
                         @Html.HiddenFor(model => model.WebSitePartners.sCreatedByID)  
                         @Html.HiddenFor(model => model.WebSitePartners.iUpdatedByID)  
                         @Html.HiddenFor(model => model.WebSitePartners.sUpdatedByID)  
                         @Html.HiddenFor(model => model.WebSitePartners.sTypeID)  

                         @Html.HiddenFor(model => model.WebSitePartners.sAssociatedUserID)  



    @Html.HiddenFor(model => model.WebSitePartners.sImageURL)
    @Html.HiddenFor(model => model.WebSitePartners.sImageURL2)
    @Html.HiddenFor(model => model.WebSitePartners.sImageURL3)


                                        <fieldset> 
                                            <legend></legend>


                                            <div class="form-group">
                                                <label for="WebSitePartners_sName">Name :</label>
                                                @Html.TextBoxFor(model => model.WebSitePartners.sName, new { @Class = "form-control" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSitePartners_iSponsorShipTypeID">Type :</label>
                                                @Html.DropDownListFor(model => model.WebSitePartners.iTypeID, Model.WebSitePartnerTypes, new { @Class = "form-control", @onchange = "javascript:on_Select_WebSitePartners_iTypeID_Changed();" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSitePartners_iAssociatedUserID">Associated User :</label>
                                                @Html.DropDownListFor(model => model.WebSitePartners.iAssociatedUserID, Model.AssociatedUsers, new { @Class = "form-control", @onchange = "javascript:on_Select_WebSitePartners_iAssociatedUserID_Changed();" })
                                            </div>




                                            <div class="form-group">
                                                <label for="WebSitePartners_sURL1">URL :</label>
                                                @Html.TextBoxFor(model => model.WebSitePartners.sURL1, new { @Class = "form-control" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSitePartners_sURL2">URL (2) :</label>
                                                @Html.TextBoxFor(model => model.WebSitePartners.sURL2, new { @Class = "form-control" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSitePartners_sURL3">URL (3) :</label>
                                                @Html.TextBoxFor(model => model.WebSitePartners.sURL3, new { @Class = "form-control" })
                                            </div>


                                            <div class="form-group">
                                                <label for="WebSitePartners_sImageURL">Image Thumbnail :</label>
                                            </div>
                                            <div class="form-group">
                                                <img src="~/@Model.WebSitePartners.sImageURL" alt="" class="img-fluid" />
                                            </div>
                                            <div class="form-group">
                                                <input type="file" name="UploadFiles1" id="UploadFiles1" class="form-control" />
                                            </div>
                                            

                                            <div class="form-group">
                                                <label for="WebSitePartners_sImageURL2">Image Medium :</label>
                                            </div>
                                            <div class="form-group">
                                                <img src="~/@Model.WebSitePartners.sImageURL2" alt="" class="img-fluid" />
                                            </div>
                                            <div class="form-group">
                                                <input type="file" name="UploadFiles2" id="UploadFiles2" class="form-control" />
                                            </div>


                                            <div class="form-group">
                                                <label for="WebSitePartners_sImageURL3">Image Large :</label>
                                            </div>
                                            <div class="form-group">
                                                <img src="~/@Model.WebSitePartners.sImageURL3" alt="" class="img-fluid" />
                                            </div>
                                            <div class="form-group">
                                                <input type="file" name="UploadFiles3" id="UploadFiles3" class="form-control" />
                                            </div>


                                            <div class="form-group">
                                                <label for="WebSitePartners_sListingDescription">Description Listing Small :</label>
                                                @Html.TextAreaFor(model => model.WebSitePartners.sListingDescription, new { @Class = "form-control textarea_admin" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSitePartners_sLargerListingDescription">Description Listing Large :</label>
                                                @Html.TextAreaFor(model => model.WebSitePartners.sLargerListingDescription, new { @Class = "form-control textarea_admin" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSitePartners_sDetailsDescription">Description Detail Page :</label>
                                                @Html.TextAreaFor(model => model.WebSitePartners.sDetailsDescription, new { @Class = "form-control textarea_admin" })
                                            </div>
                                            
                                            <div class="form-group">
                                                <label for="WebSitePartners_sCategories">Categories (separated by ',') :</label>
                                                @Html.TextBoxFor(model => model.WebSitePartners.sCategories, new { @Class = "form-control" })
                                            </div>




                                            <div class="form-group">
                                                <label for="WebSitePartners_sSpecialty">Business line specialty :</label>
                                                @Html.TextBoxFor(model => model.WebSitePartners.sSpecialty, new { @Class = "form-control" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSitePartners_sTitle">Business line category :</label>
                                                @Html.TextBoxFor(model => model.WebSitePartners.sTitle, new { @Class = "form-control" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSitePartners_sFocus">Business line focus :</label>
                                                @Html.TextBoxFor(model => model.WebSitePartners.sFocus, new { @Class = "form-control" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSitePartners_sContactPhone">Phone :</label>
                                                @Html.TextBoxFor(model => model.WebSitePartners.sContactPhone, new { @Class = "form-control" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSitePartners_sContactEMail">E-Mail :</label>
                                                @Html.TextBoxFor(model => model.WebSitePartners.sContactEMail, new { @Class = "form-control" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSitePartners_sContactAddress">Address :</label>
                                                @Html.TextAreaFor(model => model.WebSitePartners.sContactAddress, new { @Class = "form-control textarea_admin" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSitePartners_bDisabled">Is disabled :</label>
                                                @Html.CheckBoxFor(model => model.WebSitePartners.bDisabled, new { @Class = "form-control checkbox-inline" })
                                                @if (ViewBag.bError == true)
                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSitePartners.bDisabled, "*Required!")
                                                }
                                            </div>
                                            <div class="form-group">
                                                <label for="WebSitePartners_bSuspended">Is suspended :</label>
                                                @Html.CheckBoxFor(model => model.WebSitePartners.bSuspended, new { @Class = "form-control checkbox-inline" })
                                                @if (ViewBag.bError == true)
                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSitePartners.bSuspended, "*Required!")
                                                }
                                            </div>
                                            <div class="form-group">
                                                <label for="WebSitePartners_bNegative">Is negative item :</label>
                                                @Html.CheckBoxFor(model => model.WebSitePartners.bNegative, new { @Class = "form-control checkbox-inline" })
                                                @if (ViewBag.bError == true)
                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSitePartners.bNegative, "*Required!")
                                                }
                                            </div>
                                            <div class="form-group">
                                                <label for="WebSitePartners_bHidden">Should be hidden :</label>
                                                @Html.CheckBoxFor(model => model.WebSitePartners.bHidden, new { @Class = "form-control checkbox-inline" })
                                                @if (ViewBag.bError == true)
                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSitePartners.bHidden, "*Required!")
                                                }
                                            </div>

                                        </fieldset>
                                        <div class="form-group">
                                           @if (ViewBag.bAddNew == true)
                                           {
                                                <input type="submit" value="Save" name="submit" class="btn btn-block btn-outline-primary" />
                                           }
                                           else
                                           {
                                                <input type="submit" value="Save" name="submit" class="btn btn-block btn-outline-primary" />
                                           }
                                        </div>
                                   } 
         </div>
    </div>
</div>





























