                                                <label for="WebSiteAffiliates_bHidden">Should be hidden :</label>
                                                @Html.CheckBoxFor(model => model.WebSiteAffiliates.bHidden, new { @Class = "form-control checkbox-inline" })
                                                @if (ViewBag.bError == true)
                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSiteAffiliates.bHidden, "*Required!")
