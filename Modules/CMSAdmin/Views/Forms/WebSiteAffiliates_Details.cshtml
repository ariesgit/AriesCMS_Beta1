                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSiteAffiliates.bDisabled, "*Required!")
                                                }
                                            </div>
                                            <div class="form-group">
                                                <label for="WebSiteAffiliates_bSuspended">Is suspended :</label>
                                                @Html.CheckBoxFor(model => model.WebSiteAffiliates.bSuspended, new { @Class = "form-control checkbox-inline" })
                                                @if (ViewBag.bError == true)
                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSiteAffiliates.bSuspended, "*Required!")
                                                }
