                                            </div>
                                            

                                            <div class="form-group">
                                                <label for="WebSiteAffiliates_sURL1">URL :</label>
                                                @Html.TextBoxFor(model => model.WebSiteAffiliates.sURL1, new { @Class = "form-control" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSiteAffiliates_sURL2">URL (2) :</label>
                                                @Html.TextBoxFor(model => model.WebSiteAffiliates.sURL2, new { @Class = "form-control" })
