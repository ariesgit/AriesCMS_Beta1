                                                @Html.TextBoxFor(model => model.WebSiteAffiliates.sName, new { @Class = "form-control" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSiteAffiliates_iSponsorShipTypeID">Type :</label>
                                                @Html.DropDownListFor(model => model.WebSiteAffiliates.iTypeID, Model.WebSiteAffiliateTypes, new { @Class = "form-control", @onchange = "javascript:on_Select_WebSiteAffiliates_iTypeID_Changed();" })
