                                   {                             
                                        @Html.ValidationSummary(true);
                         @Html.HiddenFor(model => model.WebSiteAffiliates.ID)  
                         @Html.HiddenFor(model => model.WebSiteAffiliates.sControl)  
                         @Html.HiddenFor(model => model.WebSiteAffiliates.sSync)  
                         @Html.HiddenFor(model => model.WebSiteAffiliates.iParentID)  
                         @Html.HiddenFor(model => model.WebSiteAffiliates.sParentID)  
                         @Html.HiddenFor(model => model.WebSiteAffiliates.dtDateCreated)  
                         @Html.HiddenFor(model => model.WebSiteAffiliates.dtLastUpdated)  
                         @Html.HiddenFor(model => model.WebSiteAffiliates.iCreatedByID)  
