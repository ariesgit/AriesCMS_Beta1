@model ACMSDBView.CountryLanguagesViewModel


<script type="text/javascript">

 

    function on_CountryLanguages_iCountryID_Changed(_Id)
    {
        try
        {
            var cboControl = document.getElementById("CountryLanguages_iCountryID");
            var selectedText = cboControl[cboControl.selectedIndex].text;
            
            var oHiddenField = document.getElementById("CountryLanguages_sCountryID");
            oHiddenField.value = selectedText;

        }
        catch (e) {
            alert(e);
        }
    }
</script>


<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 border_bottom_solid_1x">
            @if (ViewBag.bAddNew)
            {
                <h2>You are ready to create a new Language</h2>
            }
            else
            {
                <h2>You are editing - @Model.CountryLanguages.sName</h2>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        @if (ViewBag.bError == true)
        {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-danger">
                <p>@Html.Raw(ViewBag.sErrorMessage)</p>
            </div>
        }
        else if (ViewBag.bSaved == true)
        {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-success">
                <p>Your request was processed successfully.</p>
            </div>
        }
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p>@Html.ActionLink("Click here", "CountryLanguages_List") to return to the list.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 offset-lg-1 offset-md-1 ">

            @using (Html.BeginForm("CountryLanguages_AddUpdate", "", FormMethod.Post))
            {
                @Html.ValidationSummary(true);

                @Html.HiddenFor(model => model.CountryLanguages.ID)
                @Html.HiddenFor(model => model.CountryLanguages.sControl)
                @Html.HiddenFor(model => model.CountryLanguages.dtDateCreated)
                @Html.HiddenFor(model => model.CountryLanguages.dtDateUpdated)


                @Html.HiddenFor(model => model.CountryLanguages.sCountryID)

                <fieldset>
                    <legend></legend>

                    <div class="form-group">
                        <label for="CountryLanguages_sName"> Name :</label>
                        @Html.TextBoxFor(model => model.CountryLanguages.sName, new { @Class = "form-control" })
                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.CountryLanguages.sName, "*Required!")
                        }
                    </div>

                    <div class="form-group">
                        <label for="CountryLanguages_iCountryID">Country :</label>
                        @Html.DropDownListFor(model => model.CountryLanguages.iCountryID, Model.Countries, new { @Class = "form-control", @onchange = "javascript:on_CountryLanguages_iCountryID_Changed();" })
                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.CountryLanguages.iCountryID, "*Required!")
                        }
                    </div>

                    <div class="form-group">
                        <label for="CountryLanguages_sAbbreviation"> Abbreviation (2 letter) :</label>
                        @Html.TextBoxFor(model => model.CountryLanguages.sAbbreviation, new { @Class = "form-control" })
                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.CountryLanguages.sAbbreviation, "*Required!")
                        }
                    </div>

                    <div class="form-group">
                        <label for="CountryLanguages_sThreeAbbreviation">Abbreviation (3 letter) :</label>
                        @Html.TextBoxFor(model => model.CountryLanguages.sThreeAbbreviation, new { @Class = "form-control" })
                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.CountryLanguages.sThreeAbbreviation, "*Required!")
                        }
                    </div>

                    <div class="form-group">
                        <label for="CountryLanguages_sCultorInfoCode">ISO Code :</label>
                        @Html.TextBoxFor(model => model.CountryLanguages.sCultorInfoCode, new { @Class = "form-control" })
                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.CountryLanguages.sCultorInfoCode, "*Required!")
                        }
                    </div>


                </fieldset>
                <div class="form-group">
                    @if (ViewBag.bAddNew == true)
                    {
                        <input type="submit" value="Update" name="submit" class="btn btn-block btn-outline-primary" />
                    }
                    else
                    {
                        <input type="submit" value="Update" name="submit" class="btn btn-block btn-outline-primary" />
                    }
                </div>
            }
            
        </div>
    </div>
</div>
