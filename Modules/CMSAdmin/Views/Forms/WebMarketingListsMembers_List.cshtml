@model IEnumerable<AriesCMSDefinition.DEF_WebMarketingListsMembers.RecordObject> 



<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 border_bottom_solid_1x">
            <h2>List Member(s)</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        @if (ViewBag.sErrorMessage != null)
        {
            if (!String.IsNullOrWhiteSpace(ViewBag.sErrorMessage))
            {
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-danger">
                    <p>@Html.Raw(ViewBag.sErrorMessage)</p>
                </div>
            }
        }
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
           @using (Html.BeginForm("WebMarketingListsMembers_List", "", FormMethod.Post))
           {
            <div class="col-lg-5 col-md-5 col-xs-5">
                @Html.TextBox("Search", "", new { @class = "form-control", placeholder="Search"})
             <input type="hidden" name="_iParentID" id="_iParentID" value="@Html.Encode(ViewBag.iParentID)" />
             <input type="hidden" name="_sParentID" id="_sParentID" value="@Html.Encode(ViewBag.sParentID)" />

            </div>
            <div class="col-lg-3 col-md-3 col-xs-3">
                <input type="submit" class="btn btn-info" value="Search" />
            </div>     

             }
            <div class="col-lg-3 col-md-3 col-xs-3">
             <p> + @Html.ActionLink("Add New Members", "WebMarketingListsMembers_create", new { _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID })</p>

            </div>
        </div>
         @if (ViewBag.bSearched == true)
         {
        <div class="col-lg-12 col-md-12 col-xs-12 alert-success">

              <p>@Html.ActionLink("Clear Search", "WebMarketingListsMembers_List", new { _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID })</p>

        </div>
                      
          }
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <table class="table">
                <thead>
                    <tr class="blue_background text-lg-center text-md-center text-xs-center whitetype">
                        <th>Name</th>
                        <th>E-Mail</th>
                        <th>Added on</th>
                        <th>Status</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @if(ViewBag.iTotalRecordCount > 0)
                    {
                        foreach (var objRec in Model)
                        {
                            <tr>
                                <th scope="row">@Html.DisplayFor(modelItem => objRec.sFName) @Html.DisplayFor(modelItem => objRec.sLName)</th>
                                <td>@Html.DisplayFor(modelItem => objRec.sEMail)</td>
                                <td>@Html.DisplayFor(modelItem => objRec.sCellPhone)</td>
                                <td>@Html.DisplayFor(modelItem => objRec.dtDateCreated)</td>
                                <td>
                                    @{ 
                                        if(objRec.bSuspended)
                                        {
                                            Html.Raw("Send Suspended");
                                        }
                                        else if (objRec.bDisabled)
                                        {
                                            Html.Raw("Send Disabled");
                                        }
                                        else
                                        {
                                            Html.Raw("Active");
                                        }

                                    }                                
                                </td>
                            <td>
                                @Html.ActionLink("Delete", "WebMarketingListsMembers_Delete", new { id=objRec.ID}, new { onclick = "return confirm('Are you sure you wish to delete this record?');" }) 
                            </td>                                              
                            </tr>
                        }
                    } 
                    else
                    {
                            <tr>                            
                              <td colspan="5">                            
                                    No Records
                                </td>                                              
                            </tr>
                    }
                
                


                    @if(ViewBag.iNumberOfPages > 0)
                    {     
                    <tr>
                            
                    <td scope="row" colspan="5" class="backgrounddark text-lg-center text-md-center text-xs-center">

                          
                      
                        
                        
              @Html.ActionLink("First", "WebMarketingListsMembers_List", new { page = 1, _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID }, new { @Class = "fnav-next" }) 
              @if(ViewBag.iCurrentPage >= 1)
              {
                  @Html.ActionLink("< Previous", "WebMarketingListsMembers_List", new { page = ViewBag.iCurrentPage - 1, _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID }, new { @Class = "fnav-next" })  
              }
              else
              {
                 @Html.ActionLink("< Previous", "WebMarketingListsMembers_List", new { page = 1, _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID }, new { @Class = "fnav-next" })
              } 
              <span>@Html.Raw(ViewBag.iCurrentPage) of @Html.Raw(ViewBag.iNumberOfPages)</span>
              @Html.ActionLink("Next >", "WebMarketingListsMembers_List", new { page = ViewBag.iCurrentPage + 1, _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID }, new { @Class = "fnav-next" }) 
              @Html.ActionLink("Last", "WebMarketingListsMembers_List", new { page = ViewBag.iNumberOfPages, _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID }, new { @Class = "fnav-next" })   

                        
                        
 
                            
                        </td>                                     
                    </tr>
                    }  
                </tbody>
            </table>
        </div>
    </div>
</div>   


























