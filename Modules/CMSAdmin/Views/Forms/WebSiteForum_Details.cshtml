@model ACMSDBView.WebSiteForumViewModel


<script type="text/javascript">



    function on_WebSiteForum_iQuestID_Changed() {
        try {
            var cboControl = document.getElementById("WebSiteForum_iQuestID");
            var selectedText = cboControl[cboControl.selectedIndex].text;

            var oHiddenField = document.getElementById("WebSiteForum_sQuestID");
            oHiddenField.value = selectedText;


        }
        catch (e) {
            alert(e);
        }
    }

</script>   
                    






<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 border_bottom_solid_1x">
            @if (ViewBag.bAddNew)
            {
                 <h2>You are ready to create a new Community</h2>
            }
            else
            {
                 <h2>You are editing - 
                   @Model.WebSiteForum.sName
                 </h2>
            }   
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
       @if (ViewBag.bError == true)
       {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-danger">
                <p> @Html.Raw(ViewBag.sErrorMessage)</p>
            </div>
       }
       else if (ViewBag.bSaved == true)
       {               
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-success">
                <p>Your request was processed successfully.</p>
            </div>
       }
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <<  @Html.ActionLink("Return List View", "WebSiteForum_List", new { _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID })
 
       
        </div>
        
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 offset-lg-1 offset-md-1">
@using (Html.BeginForm("WebSiteForum_AddUpdate", "", FormMethod.Post))
                                   {                             
                                        @Html.ValidationSummary(true);
                         @Html.HiddenFor(model => model.WebSiteForum.ID)  
                         @Html.HiddenFor(model => model.WebSiteForum.iParentID)  
                         @Html.HiddenFor(model => model.WebSiteForum.sParentID)  
                         @Html.HiddenFor(model => model.WebSiteForum.sControl)  
                         @Html.HiddenFor(model => model.WebSiteForum.sSync)  
                         @Html.HiddenFor(model => model.WebSiteForum.dtDateCreated)  
                         @Html.HiddenFor(model => model.WebSiteForum.dtLastUpdated)  
                         @Html.HiddenFor(model => model.WebSiteForum.iCreatedByID)  
                         @Html.HiddenFor(model => model.WebSiteForum.sCreatedByID)  
                         @Html.HiddenFor(model => model.WebSiteForum.iUpdatedByID)  
                         @Html.HiddenFor(model => model.WebSiteForum.sUpdatedByID) 

                         @Html.HiddenFor(model => model.WebSiteForum.sContent)  
                         @Html.HiddenFor(model => model.WebSiteForum.sVersion)  
                         @Html.HiddenFor(model => model.WebSiteForum.dTopicCount)  
                         @Html.HiddenFor(model => model.WebSiteForum.iAdScheduleID)  
                         @Html.HiddenFor(model => model.WebSiteForum.sAdScheduleID)



    @Html.HiddenFor(model => model.WebSiteForum.sQuestID)
    @Html.HiddenFor(model => model.WebSiteForum.sQuestAnswerArray)

                                        <fieldset> 
                                            <legend></legend>

                                             

                                            <div class="form-group">
                                                <label for="WebSiteForum_sName">Title :</label>
                                                @Html.TextBoxFor(model => model.WebSiteForum.sName, new { @Class = "form-control", @placeholder = "" })
                                                <span class="alert-danger">@Html.ValidationMessageFor(model => model.WebSiteForum.sName)</span>
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSiteForum_sDescription">Description :</label>
                                                @Html.TextAreaFor(model => model.WebSiteForum.sDescription, new { @Class = "form-control textarea_admin", @placeholder = "" })
                                                <span class="alert-danger">@Html.ValidationMessageFor(model => model.WebSiteForum.sDescription)</span>
                                            </div>



                                            <div class="form-group">
                                                <label for="WebSiteForum_iQuestID">Linked Questionair :</label>
                                                @Html.DropDownListFor(model => model.WebSiteForum.iQuestID, Model.WebSiteQuestionair, new { @Class = "form-control", @onchange = "javascript:on_WebSiteForum_iQuestID_Changed();" })
                                                @if (ViewBag.bError == true)
                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSiteForum.iQuestID, "*Required!")
                                                }
                                            </div>


                                        </fieldset>
                                        <div class="form-group">
                                           @if (ViewBag.bAddNew == true)
                                           {
                                                <input type="submit" value="Save" name="submit" class="btn btn-block btn-outline-primary" />
                                           }
                                           else
                                           {
                                                <input type="submit" value="Save" name="submit" class="btn btn-block btn-outline-primary" />
                                           }
                                        </div>
                                   } 
         </div>
    </div>
</div>





























