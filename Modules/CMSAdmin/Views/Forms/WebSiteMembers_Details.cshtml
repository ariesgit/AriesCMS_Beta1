                                            </div>
                                            <div class="form-group">
                                                <img src="~/@Model.WebSiteMembers.sImageURL2" alt="" class="img-fluid" />
                                            </div>
                                            <div class="form-group">
                                                <input type="file" name="UploadFiles2" id="UploadFiles2" class="form-control" />
                                            </div>
                                            

                                            <div class="form-group">
                                                <label for="WebSiteMembers_sImageURL3">Image Large :</label>
                                            </div>
                                            <div class="form-group">
                                                <img src="~/@Model.WebSiteMembers.sImageURL3" alt="" class="img-fluid" />
                                            </div>
                                            <div class="form-group">
                                                <input type="file" name="UploadFiles3" id="UploadFiles3" class="form-control" />
                                            </div>
                                            
                                            
                                            <div class="form-group">
                                                <label for="WebSiteMembers_sListingDescription">Description Listing Small :</label>
                                                @Html.TextAreaFor(model => model.WebSiteMembers.sListingDescription, new { @Class = "form-control textarea_admin" })
                                            </div>

                                            <div class="form-group">
                                                <label for="sLargerListingDescription">Description Listing Large :</label>
                                                @Html.TextAreaFor(model => model.WebSiteMembers.sLargerListingDescription, new { @Class = "form-control textarea_admin" })
                                            </div>

                                            <div class="form-group">
                                                <label for="sDetailsDescription">Description Detail Page :</label>
                                                @Html.TextAreaFor(model => model.WebSiteMembers.sDetailsDescription, new { @Class = "form-control textarea_admin" })
                                            </div>


                                            <div class="form-group">
                                                <label for="WebSiteMembers_sCategories">Categories (separated by ',') :</label>
                                                @Html.TextBoxFor(model => model.WebSiteMembers.sCategories, new { @Class = "form-control" })
                                            </div>




                                            <div class="form-group">
                                                <label for="WebSiteMembers_sSpecialty">Business line specialty :</label>
                                                @Html.TextBoxFor(model => model.WebSiteMembers.sSpecialty, new { @Class = "form-control" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSiteMembers_sTitle">Business line category :</label>
                                                @Html.TextBoxFor(model => model.WebSiteMembers.sTitle, new { @Class = "form-control" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSiteMembers_sFocus">Business line focus :</label>
                                                @Html.TextBoxFor(model => model.WebSiteMembers.sFocus, new { @Class = "form-control" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSiteMembers_sContactPhone">Phone :</label>
                                                @Html.TextBoxFor(model => model.WebSiteMembers.sContactPhone, new { @Class = "form-control" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSiteMembers_sContactEMail">E-Mail :</label>
                                                @Html.TextBoxFor(model => model.WebSiteMembers.sContactEMail, new { @Class = "form-control" })
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSiteMembers_sContactAddress">Address :</label>
                                                @Html.TextAreaFor(model => model.WebSiteMembers.sContactAddress, new { @Class = "form-control textarea_admin" })
                                            </div>





                                            <div class="form-group">
                                                <label for="WebSiteMembers_bDisabled">Is disabled :</label>
                                                @Html.CheckBoxFor(model => model.WebSiteMembers.bDisabled, new { @Class = "form-control checkbox-inline" })
                                                @if (ViewBag.bError == true)
                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSiteMembers.bDisabled, "*Required!")
                                                }
                                            </div>
                                            <div class="form-group">
                                                <label for="WebSiteMembers_bSuspended">Is suspended :</label>
                                                @Html.CheckBoxFor(model => model.WebSiteMembers.bSuspended, new { @Class = "form-control checkbox-inline" })
                                                @if (ViewBag.bError == true)
                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSiteMembers.bSuspended, "*Required!")
                                                }
                                            </div>
                                            <div class="form-group">
                                                <label for="WebSiteMembers_bNegative">Is negative item :</label>
                                                @Html.CheckBoxFor(model => model.WebSiteMembers.bNegative, new { @Class = "form-control checkbox-inline" })
                                                @if (ViewBag.bError == true)
                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSiteMembers.bNegative, "*Required!")
                                                }
                                            </div>
                                            <div class="form-group">
                                                <label for="WebSiteMembers_bHidden">Should be hidden :</label>
                                                @Html.CheckBoxFor(model => model.WebSiteMembers.bHidden, new { @Class = "form-control checkbox-inline" })
                                                @if (ViewBag.bError == true)
                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSiteMembers.bHidden, "*Required!")
                                                }
                                            </div>
                                        </fieldset>
                                        <div class="form-group">
                                           @if (ViewBag.bAddNew == true)
                                           {
                                                <input type="submit" value="Save" name="submit" class="btn btn-block btn-outline-primary" />
                                           }
                                           else
                                           {
                                                <input type="submit" value="Save" name="submit" class="btn btn-block btn-outline-primary" />
                                           }
                                        </div>
                                   } 
         </div>
    </div>
</div>





























