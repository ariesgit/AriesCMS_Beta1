@model AriesCMSDefinition.DEF_UsersChats.RecordObject



<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 border_bottom_solid_1x">
            @if (ViewBag.bAddNew)
            {
                <h2>You are ready to create a Chat</h2>
            }
            else
            {
                <h2>You are editing - @Model.sSubject</h2>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        @if (ViewBag.bError == true)
        {
            <span style="color:#F30;">
                @Html.Raw(ViewBag.sErrorMessage)
            </span>
        }
        else if (ViewBag.bSaved == true)
        {
            <span style="font-size:1.4em">
                Your request was processed successfully.
            </span>
        }
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-danger">
            <p>Error Message</p>
        </div>
        @if (ViewBag.iParentID != null)
        {
            if (ViewBag.iParentID > 0)
            {
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <p>+ @Html.ActionLink("Create New", "UsersChats_create", new { _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID })</p>
                </div>
            }
        }
        
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-success">
            @Html.ActionLink("Click here", "UsersChats_List", new { _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID }) to return to the list.
        </div>


    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 offset-lg-1 offset-md-1 ">

            @using (Html.BeginForm("UsersChats_AddUpdate", "", FormMethod.Post))
            {
                @Html.ValidationSummary(true);

                @Html.HiddenFor(model => model.ID)
                @Html.HiddenFor(model => model.iParentID)

                @Html.HiddenFor(model => model.sControl)
                @Html.HiddenFor(model => model.dtDateCreated)
                @Html.HiddenFor(model => model.dtLastUpdated)
                @Html.HiddenFor(model => model.iCreatedByID)
                @Html.HiddenFor(model => model.sCreatedByID)
                @Html.HiddenFor(model => model.iUpdatedByID)
                @Html.HiddenFor(model => model.sUpdatedByID)
                @Html.HiddenFor(model => model.iEventTypeID)
                @Html.HiddenFor(model => model.sEventTypeID)
                @Html.HiddenFor(model => model.sSubject)
                @Html.HiddenFor(model => model.sTitle)

                @Html.HiddenFor(model => model.sHTTPx)
                @Html.HiddenFor(model => model.sIP)
                @Html.HiddenFor(model => model.sOther)
                @Html.HiddenFor(model => model.iFromID)
                @Html.HiddenFor(model => model.sFromID)
                @Html.HiddenFor(model => model.sCcID)
                @Html.HiddenFor(model => model.sCc)
                @Html.HiddenFor(model => model.sBCcID)
                @Html.HiddenFor(model => model.sBCc)
                @Html.HiddenFor(model => model.sAttachemnts)
                @Html.HiddenFor(model => model.iRelatedBlogID)
                @Html.HiddenFor(model => model.sRelatedBlogID)
                @Html.HiddenFor(model => model.sRelatedPostsIDs)
                @Html.HiddenFor(model => model.sRelatedPosts)

                <fieldset>
                    <legend></legend>

                    <div class="form-group">
                        <label for="sParentID">To :</label>
                        @Html.TextBoxFor(model => model.sParentID, new { @Class = "form-control" })
                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.sParentID, "*Required!")
                        }
                    </div>


                    <div class="form-group">
                        <label for="sMessage"> Message :</label>
                        @Html.TextBoxFor(model => model.sMessage, new { @Class = "form-control" })
                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.sMessage, "*Required!")
                        }
                    </div>

                </fieldset>
                <div class="form-group">
                    @if (ViewBag.bAddNew == true)
                    {
                        <input type="submit" value="Update" name="submit" class="btn btn-block btn-outline-primary" />
                    }
                    else
                    {
                        <input type="submit" value="Update" name="submit" class="btn btn-block btn-outline-primary" />
                    }
                </div>
            }
            
        </div>
    </div>
</div>
