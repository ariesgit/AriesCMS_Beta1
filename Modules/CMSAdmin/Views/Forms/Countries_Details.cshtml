@model AriesCMSDefinition.DEF_Countries.RecordObject



<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 border_bottom_solid_1x">
            @if (ViewBag.bAddNew)
            {
                <h2>You are ready to create a new Country</h2>
            }
            else
            {
                <h2>You are editing - @Model.sName</h2>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>

    <div class="row">
        @if (ViewBag.bError == true)
        {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-danger">
                <p>@Html.Raw(ViewBag.sErrorMessage)</p>
            </div>
        }
        else if (ViewBag.bSaved == true)
        {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-success">
                <p>Your request was processed successfully.</p>
            </div>
        }
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p>@Html.ActionLink("Click here", "Countries_List") to return to the list.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>

    <div class="row">
        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 offset-lg-1 offset-md-1 ">

            @using (Html.BeginForm("Countries_AddUpdate", "", FormMethod.Post))
            {
                @Html.ValidationSummary(true);

                @Html.HiddenFor(model => model.ID)
                @Html.HiddenFor(model => model.dtDateCreated)
                @Html.HiddenFor(model => model.dtDateUpdated)
                @Html.HiddenFor(model => model.sControl)
                @Html.HiddenFor(model => model.sSyncControl)
                @Html.HiddenFor(model => model.dTimeZoneOffSet)
                @Html.HiddenFor(model => model.sTimeZoneName)
                @Html.HiddenFor(model => model.iLanguageID)
                @Html.HiddenFor(model => model.sLanguageID)
                @Html.HiddenFor(model => model.sTaxRate)
                @Html.HiddenFor(model => model.dTaxRate)
                @Html.HiddenFor(model => model.bytTaxTable)


                <fieldset>
                    <legend></legend>

                    <div class="form-group">
                        <label for="sName">Country :</label>
                        @Html.TextBoxFor(model => model.sName, new { @Class = "form-control" })
                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.sName, "*Required!")
                        }
                    </div>

                    <div class="form-group">
                        <label for="sAbbreviation">Abbreviation :</label>
                        @Html.TextBoxFor(model => model.sAbbreviation, new { @Class = "form-control" })
                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.sAbbreviation, "*Required!")
                        }
                    </div>

                    <div class="form-group">
                        <label for="sCurrencyName">Currency Name :</label>
                        @Html.TextBoxFor(model => model.sCurrencyName, new { @Class = "form-control" })
                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.sCurrencyName, "*Required!")
                        }
                    </div>

                    <div class="form-group">
                        <label for="sCurrentcySymbol"> Currency Symbol :</label>
                        @Html.TextBoxFor(model => model.sCurrentcySymbol, new { @Class = "form-control" })
                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.sCurrentcySymbol, "*Required!")
                        }
                    </div>

                    <div class="form-group">
                        <label for="dExchangeRateFromDollar"> Exchange rate vs US Dollar :</label>
                        @Html.TextBoxFor(model => model.dExchangeRateFromDollar, new { @Class = "form-control" })
                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.dExchangeRateFromDollar, "*Required!")
                        }
                    </div>



                </fieldset>
                <div class="form-group">
                    @if (ViewBag.bAddNew == true)
                    {
                        <input type="submit" value="Update" name="submit" class="btn btn-block btn-outline-primary" />
                    }
                    else
                    {
                        <input type="submit" value="Update" name="submit" class="btn btn-block btn-outline-primary" />
                    }
                </div>
            }
            
        </div>
    </div>
</div>
