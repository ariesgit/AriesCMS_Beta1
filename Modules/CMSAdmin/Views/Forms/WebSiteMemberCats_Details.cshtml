@model AriesCMS.Models.WebSiteMemberCatsDBView


<script type="text/javascript">
    

    function on_WebSiteMemberCats_iCategoryID_Changed() {
        try {
            var cboControl = document.getElementById("WebSiteMemberCats_iCategoryID");
            var selectedText = cboControl[cboControl.selectedIndex].text;

            var oHiddenField = document.getElementById("WebSiteMemberCats_sCategoryID");
            oHiddenField.value = selectedText;
            
        }
        catch (e) {
            alert(e);
        }
    }

    

</script>   
                    






<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 border_bottom_solid_1x">
            @if (ViewBag.bAddNew)
            {
                 <h2>You are ready to create a new Category</h2>
            }
            else
            {
                 <h2>You are editing - 
                   @Model.WebSiteMemberCats.sCategoryID
                 </h2>
            }   
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
       @if (ViewBag.bError == true)
       {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-danger">
                <p> @Html.Raw(ViewBag.sErrorMessage)</p>
            </div>
       }
       else if (ViewBag.bSaved == true)
       {               
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-success">
                <p>Your request was processed successfully.</p>
            </div>
       }
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <<  @Html.ActionLink("Return List View", "WebSiteMemberCats_List", new { _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID })
 
       
        </div>
        
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 offset-lg-1 offset-md-1">
@using (Html.BeginForm("WebSiteMemberCats_AddUpdate", "", FormMethod.Post))
                                   {                             
                                        @Html.ValidationSummary(true);
                         @Html.HiddenFor(model => model.WebSiteMemberCats.ID)  
                         @Html.HiddenFor(model => model.WebSiteMemberCats.sControl)  
                         @Html.HiddenFor(model => model.WebSiteMemberCats.sSync)  
                         @Html.HiddenFor(model => model.WebSiteMemberCats.iParentID)  
                         @Html.HiddenFor(model => model.WebSiteMemberCats.sParentID)  
                         @Html.HiddenFor(model => model.WebSiteMemberCats.dtDateCreated)  
                         @Html.HiddenFor(model => model.WebSiteMemberCats.dtLastUpdated)  
                         @Html.HiddenFor(model => model.WebSiteMemberCats.iCreatedByID)  
                         @Html.HiddenFor(model => model.WebSiteMemberCats.sCreatedByID)  
                         @Html.HiddenFor(model => model.WebSiteMemberCats.iUpdatedByID)  
                         @Html.HiddenFor(model => model.WebSiteMemberCats.sUpdatedByID)  
                         @Html.HiddenFor(model => model.WebSiteMemberCats.sMemberInfo)  

                         @Html.HiddenFor(model => model.WebSiteMemberCats.sCategoryID)  
      
      
                                        <fieldset> 
                                            <legend></legend>


                                            <div class="form-group">
                                                <label for="WebSiteMemberCats_iCategoryID">Category :</label>
                                                @Html.DropDownListFor(model => model.WebSiteMemberCats.iCategoryID, Model.WebSiteMemberShipsCategories, new { @Class = "form-control", @onchange = "javascript:on_WebSiteMemberCats_iCategoryID_Changed(this.value);" })
                                                @if (ViewBag.bError == true)
                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSiteMemberCats.iCategoryID, "*Required!")
                                                }
                                            </div>



                                        </fieldset>
                                        <div class="form-group">
                                           @if (ViewBag.bAddNew == true)
                                           {
                                                <input type="submit" value="Save" name="submit" class="btn btn-block btn-outline-primary" />
                                           }
                                           else
                                           {
                                                <input type="submit" value="Save" name="submit" class="btn btn-block btn-outline-primary" />
                                           }
                                        </div>
                                   } 
         </div>
    </div>
</div>





























