@model ACMSDBView.WebSitePageRolesViewModel


<script type="text/javascript">


    function on_WebSitePageRoles_iRoleID_Changed()
    {
        try
        {
            var cboControl = document.getElementById("WebSitePageRoles_iRoleID");
            var selectedText = cboControl[cboControl.selectedIndex].text;
            
            var oHiddenField = document.getElementById("WebSitePageRoles_sRoleID");
            oHiddenField.value = selectedText;

        }
        catch (e) {
            alert(e);
        }
    }

  
</script>    

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 border_bottom_solid_1x">
            @if (ViewBag.bAddNew)
            {
                <h2>Select the Role you like to restrict access to</h2>
            }
            else
            {
                <h2>You are editing - @Model.WebSitePageRoles.sRoleID</h2>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>

    <div class="row">
        @if (ViewBag.bError == true)
        {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-danger">
                <p>@Html.Raw(ViewBag.sErrorMessage)</p>
            </div>
        }
        else if (ViewBag.bSaved == true)
        {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-success">
                <p> Your request was processed successfully.</p>
            </div>
        }
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p>@Html.ActionLink("Click here", "WebSitePageRoles_List", new { _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID }) to return to the list.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>

    <div class="row">
        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 offset-lg-1 offset-md-1 ">

            @using (Html.BeginForm("WebSitePageRoles_AddUpdate", "", FormMethod.Post))
            {
                @Html.ValidationSummary(true);

                @Html.HiddenFor(model => model.WebSitePageRoles.ID)
                @Html.HiddenFor(model => model.WebSitePageRoles.iParentID)
                @Html.HiddenFor(model => model.WebSitePageRoles.sParentID)
                @Html.HiddenFor(model => model.WebSitePageRoles.sControl)
                @Html.HiddenFor(model => model.WebSitePageRoles.dtDateCreated)
                @Html.HiddenFor(model => model.WebSitePageRoles.dtLastUpdated)
                @Html.HiddenFor(model => model.WebSitePageRoles.iCreatedByID)
                @Html.HiddenFor(model => model.WebSitePageRoles.sCreatedByID)
                @Html.HiddenFor(model => model.WebSitePageRoles.iUpdatedByID)
                @Html.HiddenFor(model => model.WebSitePageRoles.sUpdatedByID)
                @Html.HiddenFor(model => model.WebSitePageRoles.sRoleID)

                <fieldset>
                    <legend></legend>


                    <div class="form-group">
                        <label for="WebSitePageRoles_iRoleID"> Role :</label>
                        @Html.DropDownListFor(model => model.WebSitePageRoles.iRoleID, Model.Roles, new { @Class = "form-control", @onchange = "javascript:on_WebSitePageRoles_iRoleID_Changed();" })
                        @if (ViewBag.bError == true)
                        {
                        @Html.ValidationMessageFor(model => model.WebSitePageRoles.iRoleID, "*Required!")
                        }
                    </div>

                    <div class="form-group">
                        <label for="WebSitePageRoles_sAccessLevel">Access level :</label>
                        @Html.DropDownListFor(model => model.WebSitePageRoles.sAccessLevel, Model.AccessLevels, new { @Class = "form-control" })
                        @if (ViewBag.bError == true)
                        {
                        @Html.ValidationMessageFor(model => model.WebSitePageRoles.sAccessLevel, "*Required!")
                        }
                    </div>

                </fieldset>
                @if (ViewBag.bAddNew == true)
                {
                    <input type="submit" value="Update" name="submit" class="btn btn-block btn-outline-primary" />
                }
                else
                {
                    <input type="submit" value="Update" name="submit" class="btn btn-block btn-outline-primary" />
                }
            }
        </div>
    </div>
</div>