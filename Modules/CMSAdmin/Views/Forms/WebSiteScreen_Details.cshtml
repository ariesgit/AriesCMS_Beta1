@model ACMSDBView.WebSiteScreenViewModel






<script type="text/javascript">


    function on_WebSiteScreen_iZoneID_Changed()
    {
        try
        {
            var cboControl = document.getElementById("WebSiteScreen_iZoneID");
            var selectedText = cboControl[cboControl.selectedIndex].text;
            
            var oHiddenField = document.getElementById("WebSiteScreen_sZoneID");
            oHiddenField.value = selectedText;

        }
        catch (e) {
            alert(e);
        }
    }


    function on_WebSiteScreen_iSiteTemplateID_Changed() {
        try {
            var cboControl = document.getElementById("WebSiteScreen_iSiteTemplateID");
            var selectedText = cboControl[cboControl.selectedIndex].text;

            var oHiddenField = document.getElementById("WebSiteScreen_sSiteTemplateID");
            oHiddenField.value = selectedText;

        }
        catch (e) {
            alert(e);
        }
    }

  
</script>    



<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 border_bottom_solid_1x">
            @if (ViewBag.bAddNew)
            {
                <h2>You are ready to create a new Screen</h2>
            }
            else
            {
                <h2>You are editing - @Model.WebSiteScreen.sScreenName</h2>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        @if (ViewBag.bError == true)
        {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-danger">
                <p>@Html.Raw(ViewBag.sErrorMessage)</p>
            </div>
        }
        else if (ViewBag.bSaved == true)
        {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-success">
                <p>Your request was processed successfully.</p>
            </div>
        }
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p>@Html.ActionLink("Click here", "WebSiteScreen_List", new { _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID }) to return to the list.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 offset-lg-1 offset-md-1 ">
            @using (Html.BeginForm("WebSiteScreen_AddUpdate", "", FormMethod.Post))
            {
                @Html.ValidationSummary(true);

                @Html.HiddenFor(model => model.WebSiteScreen.ID)
                @Html.HiddenFor(model => model.WebSiteScreen.iParentID)
                @Html.HiddenFor(model => model.WebSiteScreen.sParentID)
                @Html.HiddenFor(model => model.WebSiteScreen.sControl)
                @Html.HiddenFor(model => model.WebSiteScreen.dtDateCreated)
                @Html.HiddenFor(model => model.WebSiteScreen.dtLastUpdated)
                @Html.HiddenFor(model => model.WebSiteScreen.iCreatedByID)
                @Html.HiddenFor(model => model.WebSiteScreen.sCreatedByID)
                @Html.HiddenFor(model => model.WebSiteScreen.iUpdatedByID)
                @Html.HiddenFor(model => model.WebSiteScreen.sUpdatedByID)
                @Html.HiddenFor(model => model.WebSiteScreen.sScreenNavigationName)
                @Html.HiddenFor(model => model.WebSiteScreen.sScreenNavigationURL)
                @Html.HiddenFor(model => model.WebSiteScreen.bIsLive)
                @Html.HiddenFor(model => model.WebSiteScreen.dtStart)
                @Html.HiddenFor(model => model.WebSiteScreen.dtEnd)
                @Html.HiddenFor(model => model.WebSiteScreen.sSiteTemplateID)
                @Html.HiddenFor(model => model.WebSiteScreen.sSiteTemplateURI)
                @Html.HiddenFor(model => model.WebSiteScreen.sSiteTempalteURL)
                @Html.HiddenFor(model => model.WebSiteScreen.sScreenLoadIncludeURI)
                @Html.HiddenFor(model => model.WebSiteScreen.bLoadPartialPage)
                @Html.HiddenFor(model => model.WebSiteScreen.sZoneID)
                @Html.HiddenFor(model => model.WebSiteScreen.bRestrictAccess)

                <fieldset>
                    <legend></legend>


                    <div class="form-group">
                        <label for="WebSiteScreen_sScreenName">Name :</label>


                        @Html.TextBoxFor(model => model.WebSiteScreen.sScreenName, new { @Class = "form-control" })

                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.WebSiteScreen.sScreenName, "*Required!")
                        }

                    </div>

                    <div class="form-group">
                        <label for="WebSiteScreen_sSiteTempalteURL">Location :</label>


                        @Html.TextAreaFor(model => model.WebSiteScreen.sSiteTempalteURL, new { @Class = "form-control" })

                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.WebSiteScreen.sSiteTempalteURL, "*Required!")
                        }

                    </div>

                    <div class="form-group">
                        <label for="WebSiteScreen_bIsLive">Is live :</label>


                        @Html.CheckBoxFor(model => model.WebSiteScreen.bIsLive, new { @Class = "form-control" })

                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.WebSiteScreen.bIsLive, "*Required!")
                        }

                    </div>

                    <div class="form-group">
                        <label for="WebSiteScreen_bRestrictAccess">Restrict access :</label>


                        @Html.CheckBoxFor(model => model.WebSiteScreen.bRestrictAccess, new { @Class = "form-control" })

                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.WebSiteScreen.bRestrictAccess, "*Required!")
                        }

                    </div>

                    <div class="form-group">
                        <label for="WebSiteScreen_iSiteTemplateID">Template :</label>


                        @Html.DropDownListFor(model => model.WebSiteScreen.iSiteTemplateID, Model.SiteTemplates, new { @Class = "form-control", @onchange = "javascript:on_WebSiteScreen_iSiteTemplateID_Changed();" })

                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.WebSiteScreen.iSiteTemplateID, "*Required!")
                        }

                    </div>

                    <div class="form-group">
                        <label for="WebSiteScreen_iZoneID">Template zone :</label>


                        @Html.DropDownListFor(model => model.WebSiteScreen.iZoneID, Model.WebSitePageTemplateZones, new { @Class = "form-control", @onchange = "javascript:on_WebSiteScreen_iZoneID_Changed();" })

                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.WebSiteScreen.iZoneID, "*Required!")
                        }

                    </div>
                </fieldset>

                <div class="form-group">
                    <input type="submit" value="Update" name="submit" class="btn btn-block btn-outline-primary" />
                </div>
            }

        </div>
    </div>
</div>


