@model ACMSDBView.WebSitePageiAnnouncementsViewModel
  

<script type="text/javascript">
     

    function on_WebSitePageiAnnouncements_iQuestID_Changed() {
        try {
            var cboControl = document.getElementById("WebSitePageiAnnouncements_iQuestID");
            var selectedText = cboControl[cboControl.selectedIndex].text;

            var oHiddenField = document.getElementById("WebSitePageiAnnouncements_sQuestID");
            oHiddenField.value = selectedText;


        }
        catch (e) {
            alert(e);
        }
    }

    

</script>   
                    






<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 border_bottom_solid_1x">
            @if (ViewBag.bAddNew)
            {
                 <h2>You are ready to create a new Announcement</h2>
            }
            else
            {
                 <h2>You are editing - @Model.WebSitePageiAnnouncements.sName</h2>
            }   
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
       @if (ViewBag.bError == true)
       {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-danger">
                <p> @Html.Raw(ViewBag.sErrorMessage)</p>
            </div>
       }
       else if (ViewBag.bSaved == true)
       {               
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-success">
                <p>Your request was processed successfully.</p>
            </div>
       }
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <<  @Html.ActionLink("Return List View", "WebSitePageiAnnouncements_List", new { _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID })
        </div>        
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 offset-lg-1 offset-md-1">
@using (Html.BeginForm("WebSitePageiAnnouncements_AddUpdate", "", FormMethod.Post))
                                   {                             
                                        @Html.ValidationSummary(true);
                         @Html.HiddenFor(model => model.WebSitePageiAnnouncements.ID)  
                         @Html.HiddenFor(model => model.WebSitePageiAnnouncements.sControl)  
                         @Html.HiddenFor(model => model.WebSitePageiAnnouncements.sSync)  
                         @Html.HiddenFor(model => model.WebSitePageiAnnouncements.iParentID)  
                         @Html.HiddenFor(model => model.WebSitePageiAnnouncements.sParentID)  
                         @Html.HiddenFor(model => model.WebSitePageiAnnouncements.dtDateCreated)  
                         @Html.HiddenFor(model => model.WebSitePageiAnnouncements.dtLastUpdated)  
                         @Html.HiddenFor(model => model.WebSitePageiAnnouncements.iCreatedByID)  
                         @Html.HiddenFor(model => model.WebSitePageiAnnouncements.sCreatedByID)  
                         @Html.HiddenFor(model => model.WebSitePageiAnnouncements.iUpdatedByID)  
                         @Html.HiddenFor(model => model.WebSitePageiAnnouncements.sUpdatedByID)  
                         @Html.HiddenFor(model => model.WebSitePageiAnnouncements.sVersion) 

                         @Html.HiddenFor(model => model.WebSitePageiAnnouncements.iAnsweredByID)  
                         @Html.HiddenFor(model => model.WebSitePageiAnnouncements.sAnsweredByID)  
                         @Html.HiddenFor(model => model.WebSitePageiAnnouncements.iAnsweredByResponseID)  
                         @Html.HiddenFor(model => model.WebSitePageiAnnouncements.sAnsweredByResponseID)

    @Html.HiddenFor(model => model.WebSitePageiAnnouncements.bQuestionair)
    @Html.HiddenFor(model => model.WebSitePageiAnnouncements.sQuestID)
    @Html.HiddenFor(model => model.WebSitePageiAnnouncements.sQuestAnswerArray)
     
                                        <fieldset> 
                                            <legend></legend>



                                            <div class="form-group">
                                                <label for="WebSitePageiAnnouncements_sName">Title :</label>
                                                @Html.TextBoxFor(model => model.WebSitePageiAnnouncements.sName, new { @Class = "form-control", @placeholder = "" })
                                                <span class="alert-danger">@Html.ValidationMessageFor(model => model.WebSitePageiAnnouncements.sName)</span>
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSitePageiAnnouncements_sDescription">Description (HTML ok) :</label>
                                                @Html.TextAreaFor(model => model.WebSitePageiAnnouncements.sDescription, new { @Class = "form-control textarea_admin", @placeholder = "" })
                                                <span class="alert-danger">@Html.ValidationMessageFor(model => model.WebSitePageiAnnouncements.sDescription)</span>
                                            </div>

                                            <div class="form-group">
                                                <label for="WebSitePageiAnnouncements_sContent">Announcement (HTML ok) :</label>
                                                @Html.TextAreaFor(model => model.WebSitePageiAnnouncements.sContent, new { @Class = "form-control textarea_admin", @placeholder = "" })
                                                <span class="alert-danger">@Html.ValidationMessageFor(model => model.WebSitePageiAnnouncements.sContent)</span>
                                            </div>


                                            <div class="form-group">
                                                <label for="WebSitePageiAnnouncements_bRemoved">Removed :</label>
                                                @Html.CheckBoxFor(model => model.WebSitePageiAnnouncements.bRemoved, new { @Class = "form-control checkbox-inline" })
                                                @if (ViewBag.bError == true)
                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSitePageiAnnouncements.bRemoved, "*Required!")
                                                }
                                            </div>
                                            <div class="form-group">
                                                <label for="WebSitePageiAnnouncements_bAnswered">Archive :</label>
                                                @Html.CheckBoxFor(model => model.WebSitePageiAnnouncements.bAnswered, new { @Class = "form-control checkbox-inline" })
                                                @if (ViewBag.bError == true)
                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSitePageiAnnouncements.bAnswered, "*Required!")
                                                }
                                            </div>
                                            <div class="form-group">
                                                <label for="WebSitePageiAnnouncements_iQuestID">Linked Questionair :</label>
                                                @Html.DropDownListFor(model => model.WebSitePageiAnnouncements.iQuestID, Model.WebSiteQuestionair, new { @Class = "form-control", @onchange = "javascript:on_WebSitePageiAnnouncements_iQuestID_Changed();" })
                                                @if (ViewBag.bError == true)
                                                {
                                                    @Html.ValidationMessageFor(model => model.WebSitePageiAnnouncements.iQuestID, "*Required!")
                                                }
                                            </div>

                                        </fieldset>
                                        <div class="form-group">
                                           @if (ViewBag.bAddNew == true)
                                           {
                                                <input type="submit" value="Save" name="submit" class="btn btn-block btn-outline-primary" />
                                           }
                                           else
                                           {
                                                <input type="submit" value="Save" name="submit" class="btn btn-block btn-outline-primary" />
                                           }
                                        </div>
                                   } 
         </div>
    </div>
</div>





























