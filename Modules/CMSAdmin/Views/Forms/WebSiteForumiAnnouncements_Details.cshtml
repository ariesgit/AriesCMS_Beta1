                                                <span class="alert-danger">@Html.ValidationMessageFor(model => model.WebSiteForumiAnnouncements.sName)</span>
                                            </div>
                                            <div class="form-group">
                                                <label for="WebSiteForumiAnnouncements_sDescription">Description :</label>
                                                @Html.TextAreaFor(model => model.WebSiteForumiAnnouncements.sDescription, new { @Class = "form-control textarea_admin", @placeholder = "" })
                                                <span class="alert-danger">@Html.ValidationMessageFor(model => model.WebSiteForumiAnnouncements.sDescription)</span>
                                            </div>
                                            <div class="form-group">
                                                <label for="WebSiteForumiAnnouncements_sContent">HTML :</label>
                                                @Html.TextAreaFor(model => model.WebSiteForumiAnnouncements.sContent, new { @Class = "form-control textarea_admin", @placeholder = "" })
