@model ACMSDBView.WebSiteForumiAnnouncementsViewModel


<script type="text/javascript">



    function on_WebSiteForumiAnnouncements_iQuestID_Changed() {
        try {
            var cboControl = document.getElementById("WebSiteForumiAnnouncements_iQuestID");
            var selectedText = cboControl[cboControl.selectedIndex].text;

            var oHiddenField = document.getElementById("WebSiteForumiAnnouncements_sQuestID");
            oHiddenField.value = selectedText;


        }
        catch (e) {
            alert(e);
        }
    }

</script>   
                    






