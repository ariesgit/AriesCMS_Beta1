@model IEnumerable<AriesCMSDefinition.DEF_WebSiteScreenRoles.RecordObject> 

            
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 border_bottom_solid_1x">
            <h2>Access Restricted to Roles</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        @if (ViewBag.sErrorMessage != null)
        {
            if (!String.IsNullOrWhiteSpace(ViewBag.sErrorMessage))
            {
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-danger">
                    <p>@Html.Raw(ViewBag.sErrorMessage)</p>
                </div>
            }
        }
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            @using (Html.BeginForm("WebSiteScreenRoles_List", "", FormMethod.Post))
            {
                <div class="col-lg-5 col-md-5 col-xs-5">
                    @Html.TextBox("Search", "", new { @class = "form-control", placeholder = "Search" })
                </div>
                <div class="col-lg-3 col-md-3 col-xs-3">
                    <input type="submit" name="submit" value="Search" class="btn btn-info" />
                </div>
            }
            <div class="col-lg-3 col-md-3 col-xs-3">
                + @Html.ActionLink("Create New", "WebSiteScreenRoles_create", new { _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID })
            </div>
        </div>
        @if (ViewBag.bSearched == true)
        {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-success">
                <p>@Html.ActionLink("Clear Search", "WebSiteScreenRoles_List", new { _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID })</p>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <table class="table">
                <thead>
                    <tr class="blue_background text-lg-center text-md-center text-xs-center whitetype">
                        <th>Role</th>
                        <th>Access</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>

                    @if (ViewBag.iTotalRecordCount > 0)
                    {
                        foreach (var objRec in Model)
                        {
                            <tr>
                                <td scope="row">@Html.DisplayFor(modelItem => objRec.sRoleID)</td>
                                <td>@Html.DisplayFor(modelItem => objRec.sAccessLevel)</td>

                                <td>
                                    @Html.ActionLink("Edit", "WebSiteScreenRoles_Details", new { id = objRec.ID })
                                    @Html.Raw("|")
                                    @Html.ActionLink("Delete", "WebSiteScreenRoles_Delete", new { id = objRec.ID }, new { onclick = "return confirm('Are you sure you wish to delete this record?');" })
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">
                                No Records
                            </td>
                        </tr>
                    }

                    @if (ViewBag.iNumberOfPages > 0)
                    {
                        <tr>
                            <th scope="row" colspan="3" class="blue_background text-lg-center text-md-center text-xs-center">
                                @Html.ActionLink("First", "WebSiteScreenRoles_List", new { page = 1, _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID }, new { @Class = " a_white" })
                                @if (ViewBag.iCurrentPage >= 1)
                                {
                                    @Html.ActionLink("< Previous", "WebSiteScreenRoles_List", new { page = ViewBag.iCurrentPage - 1, _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID }, new { @Class = " a_white" })
                                }
                                else
                                {
                                    @Html.ActionLink("< Previous", "WebSiteScreenRoles_List", new { page = 1, _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID }, new { @Class = " a_white" })
                                }
                                <span>@Html.Raw(ViewBag.iCurrentPage) of @Html.Raw(ViewBag.iNumberOfPages)</span> 
                                @Html.ActionLink("Next >", "WebSiteScreenRoles_List", new { page = ViewBag.iCurrentPage + 1, _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID }, new { @Class = " a_white" })
                                @Html.ActionLink("Last", "WebSiteScreenRoles_List", new { page = ViewBag.iNumberOfPages, _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID }, new { @Class = " a_white" })
                            </th>
                        </tr>
                    }                      
                </tbody>
            </table>
        </div>
    </div>
</div>      