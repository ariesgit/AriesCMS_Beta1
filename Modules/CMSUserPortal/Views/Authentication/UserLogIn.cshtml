@model ACMSDBView.UserAuthentication





<div class="row border_bottom_solid_2x">
    <div class="col-lg-12 col-md-12 col-xs-12 text-lg-left text-md-left text-xs-left">
        <h4>Sign Into Your ARIES CMS USER PORTAL</h4>
    </div>
</div>
<div class="row">
    @if (ViewBag.bLoginError == true)
    {
        <div class="col-lg-12 col-md-12 col-xs-12 alert-danger">
            <p>
                @ViewBag.sResponseMessage  &nbsp; &nbsp;

            @if (ViewBag.bAccountInuse == true)
            {
                @Html.ActionLink("Log Off All Other Instances", "UserLogOffAllInstances")
            }
        </p>
        </div>
    }
    else if (ViewBag.bLoggedIn == true)
    {
        <div class="col-lg-12 col-md-12 col-xs-12 alert-success">
            <p> Your have been successfully sing up! @Html.ActionLink("Click here", "EnterMyPortal") to enter your portal.</p>
        </div>
    }
</div>

@if ((ViewBag.bLoggedIn == false) || (ViewBag.bLoggedIn == null))
{
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            @using (Html.BeginForm("UserLogIn", "", FormMethod.Post))
            {
                Html.ValidationSummary(true);
                <fieldset>
                    <legend></legend>

                    <div class="form-group">
                        <label for="UserName">User Name:</label>
                        @Html.TextBoxFor(model => model.UserName, new { @Class = "form-control", @placeholder = "Email Address" })
                        @if (ViewBag.bLoginUserNameError == true)
                        {
                            @ViewBag.sUserName
                        }
                    </div>
                    <div class="form-group">
                        <label for="Password">Password:</label>
                        @Html.PasswordFor(model => model.Password, new { @Class = "form-control", @placeholder = "Password" })
                        @if (ViewBag.bLoginUserNameError == true)
                        {
                            @ViewBag.sPassword
                        }
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Log In" name="submit" class="btn btn-block btn-outline-primary" />
                    </div>
                </fieldset>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-10 col-xs-12 offset-lg-1 offset-md-1">
            <p> Forgotten your credentials? <br /> <a href="~/profilerecovery">Click here</a> to start a process to recover them.</p>
        </div>
    </div>
}



