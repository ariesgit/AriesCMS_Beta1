@model ACMSDBView.WebSiteBlogCommentsViewModel





<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 border_bottom_solid_1x">
            @if (ViewBag.bAddNew)
            {
                <h2>You are ready to create a new Blog Comment</h2>
            }
            else
            {
                <h2>You are editing - Blog Comment</h2>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        @if (ViewBag.bError == true)
        {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-danger">
                <p>@Html.Raw(ViewBag.sErrorMessage)</p>
            </div>
        }
        else if (ViewBag.bSaved == true)
        {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-success">
                <p>Your request was processed successfully.</p>
            </div>
        }
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p>@Html.ActionLink("Click here", "WebSiteBlogComments_List", new { _iParentID = ViewBag.iParentID, _sParentID = ViewBag.sParentID }) to return to the list.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 offset-lg-1 offset-md-1 ">
            @using (Html.BeginForm("WebSiteBlogComments_AddUpdate", "", FormMethod.Post))
            {
                @Html.ValidationSummary(true);

                @Html.HiddenFor(model => model.WebSiteBlogComments.ID)
                @Html.HiddenFor(model => model.WebSiteBlogComments.iParentID)
                @Html.HiddenFor(model => model.WebSiteBlogComments.sParentID)
                @Html.HiddenFor(model => model.WebSiteBlogComments.sControl)
                @Html.HiddenFor(model => model.WebSiteBlogComments.dtDateCreated)
                @Html.HiddenFor(model => model.WebSiteBlogComments.dtLastUpdated)
                @Html.HiddenFor(model => model.WebSiteBlogComments.iCreatedByID)
                @Html.HiddenFor(model => model.WebSiteBlogComments.sCreatedByID)
                @Html.HiddenFor(model => model.WebSiteBlogComments.iUpdatedByID)
                @Html.HiddenFor(model => model.WebSiteBlogComments.sUpdatedByID)
                @Html.HiddenFor(model => model.WebSiteBlogComments.sParentCommentID)
                @Html.HiddenFor(model => model.WebSiteBlogComments.iParentCommentID)

                <fieldset>
                    <legend></legend>

                    <div class="form-group">
                        <label for="WebSiteRole_iRoleID">Comment :</label>

                        @Html.TextAreaFor(model => model.WebSiteBlogComments.sComment, new { @Class = "form-control textarea_admin" })

                        @if (ViewBag.bError == true)
                        {
                            @Html.ValidationMessageFor(model => model.WebSiteBlogComments.sComment, "*Required!")
                        }
                    </div>
                </fieldset>
                <div class="form-group">
                    <input type="submit" value="Save" name="submit" class="btn btn-block btn-outline-primary" />
                </div>
            }

        </div>
    </div>
</div>
